<%= form_for(@user) do |f| %>

<% if @user.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

<ul>
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<% end %>

<form class="form-horizontal">
<fieldset>

<div class="form-group">
<label for="inputUser" class="col-lg-2 control-label">USERNAME <br></label>
<div class="col-lg-10">
<input type="text" name='user[username]' class="form-control" placeholder="<%= @user.username || "enter a username" %>">
</div>

</div>
<div class="form-group">
<label for="inputUser" class="col-lg-2 control-label">PASSWORD</label>
<div class="col-lg-10">
<input type="text" name='user[password]'class="form-control" placeholder="<%= @user.password || "enter a password" %>">
</div>
</div>
<div class="form-group">
<label for="inputUser" class="col-lg-2 control-label">FIRST NAME <br></label>
<div class="col-lg-10">
<input type="text" name='user[firstname]' class="form-control" placeholder="<%= @user.firstname || "enter firstname" %>">
</div>
</div>
<div class="form-group">
<label for="inputUser" class="col-lg-2 control-label">LAST NAME <br></label>
<div class="col-lg-10">
<input type="text" name='user[lastname]' class="form-control" placeholder="<%= @user.lastname || "enter lastname" %>">
</div>

<div class="form-group">
<label for="inputUser" class="col-lg-2 control-label">E-MAIL <br></label>
<div class="col-lg-10">
<input type="text" name='user[email]' class="form-control" placeholder="<%= @user.email || "enter email" %>">
</div>

<div class="form-group">
<label for="select" class="col-lg-2 control-label">TEAMS</label>
<div class="col-lg-10">
<select class="form-control" name='user[teams]' id="select">

<% @teams.each do |team| %>
<option><%= team.name %></option>
<% end %>
<option>none</option>
</select>
<br>

</div>
</div>

<div class="col-lg-10 col-lg-offset-2">
<button type="reset" class="btn btn-default">Cancel</button>
<button type="submit" class="btn btn-primary">Submit</button>
</div>
</fieldset>
</form>
<% end %>
