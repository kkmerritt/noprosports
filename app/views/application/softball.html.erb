<h2>Softball League Info</h2>

<% @teams.each do |team| %>
  <tr>
<% if team.league == "softball"%>
    <td><h3><%= team.name %></h3></td>

    <td>sport: <%= team.league %></td><br>
    <td><%= link_to 'Show', team, class: "btn btn-danger btn-sm" %></td>
    <td><%= link_to 'Edit', edit_team_path(team), class: "btn btn-danger btn-sm" %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
    <br>
    <br>
      </tr>
<% end %>
<% end %>

